    public SceneData SceneRef;


#if UNITY_EDITOR

    [OnValueChanged(nameof(UpdateNextSceneAsset))]
    public UnityEditor.SceneAsset SceneAsset;

    private void UpdateSceneRef()
    {
        if (SceneAsset != null)
            SceneRef = SceneData.Create(SceneAsset);
        else
            SceneRef = null;
    }

    private void OnEnable()
    {
        UpdateSceneRef();
    }
